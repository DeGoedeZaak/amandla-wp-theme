{% extends "base.twig" %}

{% block content %}
	<form class="password-form" action="{{site.site_url}}/wp-login.php?action=postpass" method="post">
		<label for="pwbox-{{post.ID}}">{{pl_e('Password')}}:</label>
		<input class="password-box" name="post_password" id="pwbox-{{post.ID}}" type="password" placeholder="{{pl_e('Password'}}" size="20" maxlength="20" />
		<input class="password-btn" type="submit" name="Submit" value="{{pl_e('Submit')}}" />
	</form>
{% endblock %}
